<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.0 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.0.xsd">

    <preConditions>
        <not>
            <dbms type="oracle"/>
        </not>

        <userExists username="root"/>
    </preConditions>


    <changeSet id="1" author="Alice" context="Production">
        <createTable tableName="People">
            <column name="id" type="int" autoIncrement="true">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="varchar(255)"/>
            <column name="lastname" type="varchar(255)"/>
            <column name="username" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="testid" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Alice" context="Production">
        <insert tableName="People">
            <!--column name="id" value="1"/-->
            <column name="username" value="root"/>
        </insert>
        <insert tableName="People">
            <!--column name="id" value="2"/-->
            <column name="firstname" value="Fred"/>
            <column name="lastname" value="Johnson"/>
            <column name="username" value="fjohnson"/>
            <column name="testid" value="2"/>
        </insert>
        <insert tableName="People">
            <!--column name="id" value="3"/-->
            <column name="firstname" value="Susan"/>
            <column name="lastname" value="Smith"/>
            <column name="username" value="ssmith"/>
            <column name="testid" value="2"/>
        </insert>

    </changeSet>

    <changeSet id="2" author="Bob" context="Production">
        <insert tableName="People">
            <!--column name="id" value="4"/-->
            <column name="firstname" value="John"/>
            <column name="lastname" value="Doe"/>
            <column name="username" value="jdoe"/>
            <column name="testid" value="3"/>
        </insert>
        <insert tableName="People">
            <!--column name="id" value="5"/-->
            <column name="firstname" value="Ed"/>
            <column name="lastname" value="Jones"/>
            <column name="username" value="ejones"/>
            <column name="testid" value="4"/>
        </insert>
    </changeSet>
    <changeSet id="45" author="thilak" context="Testing">
        <addNullConstraint tableName="people" columnName="testid" defaultNullValue="0"/>
    </changeSet>

    <changeSet id="35" author="thilak">
        <DropNullConstraint tableName="people" columnName="testid"/>
    </changeSet>


</databaseChangeLog>