    <dependencySets>
        <dependencySet>
            <outputDirectory>sdk/lib</outputDirectory>
            <excludes>
                <exclude>org.liquibase:liquibase-core</exclude>
                <exclude>org.yaml:snakeyaml</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>